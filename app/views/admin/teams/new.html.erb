
<%= form_for @team, as: :team, url: admin_teams_path do |f| %>

  <p> Name </p>
  <p><%= f.text_field :name %></p>
  <p> Description </p>
  <p><%= f.text_area :description %></p>

  <div class="span8">

	<h4>Select members and leader</h4>
	<% if @free_members.any? %>
	    <table class="table table-hover">
	      <thead>
	      <tr>
	      	<th>Select Members</th>
          <th>Select Leader</th>
	        <th>Name</th>
	        <th>Email</th>
	        <th>Profile</th>
	      </tr>
	      </thead>
	      <% @free_members.each do |user| %>
	          <tbody>
	          <tr>
	          	<td><%= check_box_tag "user_ids[]", user.id %></td>
              <td><%= radio_button_tag :leader_id, user.id %></td>
	            <td><%= user.name %></td>
	            <td><%= user.email %></td>
	            <td><%= user.profile %></td>
	          </tr>
	          </tbody>
	      <% end %>
	    </table>
	<% end %>
	<%= f.submit "Create Team", class: "btn btn-primary" %>
  </div>
  
<% end %>
<% if flash[:error] %>
  <div class="alert alert-error">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    <strong><%= flash[:error] %></strong>
  </div>
<% end %>
<% if flash[:success] %> 
  <div class="alert alert-success"> 
    <strong><%= flash[:success] %></strong>
  </div> 
<% end %>