<h2>List all skills</h2>
<% if !@skills.nil? %>
  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
    </thead>
    <% @skills.each do |skill| %>
      <tbody>
        <tr>
          <td><%= skill.id %></td>
          <td><%= skill.name %></td>
          <td class="form-actions"><%= link_to 'Edit', edit_admin_skill_path(skill),class: "btn btn-mini btn-danger",
                                   method: :get %></td>
          <td class="form-actions"><%= link_to 'Delete', admin_skill_path(skill),class: "btn btn-mini btn-danger",
                                   method: :delete, data: { confirm: "Are you sure?"}, title: skill.name %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
<% end %>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @skill, as: :skill, url: admin_skills_path do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <p> Name </p>
      <%= f.text_field :name %>
      
      <%= f.submit "+ Add skill", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
